{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": false,
    "importHelpers": true,
    "resolveJsonModule": true,
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "target": "es2021",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "incremental": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "types": ["node"],
  },
  "exclude": ["node_modules", "tmp"]
}
